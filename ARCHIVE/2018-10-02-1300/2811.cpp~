#include <bits/stdc++.h>
using namespace std;

////////////// Prewritten code follows. Look down for solution. ////////////////
#define x first
#define y second
#define len(x) ((int)(x).size())
using pii = pair<int, int>;
using ll = long long;
using llu = long long unsigned;
using ld = long double;

const ld EPS = 1e-9;
inline int cmp(ld x, ld y = 0, ld tol = EPS) {
  return (x <= y + tol) ? (x + tol < y) ? -1 : 0 : 1;
}

const int MOD = 1e9+7;
inline int mod (llu x, llu m = MOD) {
  return (int)(((x%m) + m)%m);
}

////////////////////////// Solution starts below. //////////////////////////////

const int N = 2020;

int n;
int fat[N], inv_fat[N];
ll arr[N];
int qnt[70];

int pow_mod (llu b, llu p) {
  int r = 1;
  while (p) {
    if (p&1)
      r = (int)mod (r*b);
    p >>= 1;
    b = mod (b * 1LLU * b);
  }

  return r;
}

int inv_mod (int v) {
  return pow_mod (v, MOD-2);
}

bool bin_newton_even (int a, int b) {
  //printf ("%d %d %d: %d %d %d\n", a, b, a-b, fat[a], fat[b], fat[a-b]);
  return (fat[a] > (fat[b]+fat[a-b]));
}

int main () {
  fat[0] = 0;
  for (int i = 1; i < N; i++) {
    for (int j = 2; i/j > 0; j<<=1)
      fat[i] += i/j;
    //if (i < 20)
    //printf ("%d: %d\n", i, fat[i]);
  }

  llu x;
  scanf ("%d", &n);
  for (int i = 0; i < n; i++) {
    scanf ("%llu", &x);
    int p = 0;
    while (x) {
      if (x&1)
	qnt[p]++;
      ++p;
      x >>= 1;
    }
  }

  int ans = 0;
  x = 0;
  // Subsets of size 1
  for (int i = 0; i < 64; i++)
    if (qnt[i]&1)
      x |= (1LLU << i);
  ans = mod (x);
  //printf ("%d\n", ans);
  // Subsets of size [2..n-1]
  for (int i = 2; i < n; i++) {
    x = 0;
    for (int j = 0; j < 64; j++)
      if (qnt[j] == i  || (qnt[j] > i && !bin_newton_even (qnt[j], i)))
	x |= (1LLU<<j);
    ans = mod (ans + x);
  }
  if (n > 1) {
    // Subset of size n
    x = 0;
    for (int i = 0; i < 64; i++) {
      //printf ("%d: %d\n", i, qnt[i]);
      if (qnt[i] == n)
	x |= (1LLU << i);
    }
    ans = mod (ans + x);
  }
  
  printf ("%d\n", ans);
  
  return 0;
}
