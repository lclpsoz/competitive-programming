#include <bits/stdc++.h>
using namespace std;

////////////// Prewritten code follows. Look down for solution. ////////////////
#define x first
#define y second
#define pb push_back
#define foreach(x, v) for (typeof (v).begin() x=(v).begin(); x !=(v).end(); ++x)
#define For(i, a, b) for (int i=(a); i<(b); ++i)
#define D(x) cerr << #x " is " << (x) << endl
typedef pair<int, int> pii;
typedef long long ll;
typedef long double ld;
const int INF = 1e9;

const double EPS = 1e-9;
int cmp(double x, double y = 0, double tol = EPS) {
  return (x <= y + tol) ? (x + tol < y) ? -1 : 0 : 1;
}

////////////////////////// Solution starts below. //////////////////////////////

int n, m;
int dist[102][102][102];

int main ()
{
  int v, u, w;
  while (scanf ("%d %d", &n, &m), n || m) {
    for (int k = 0; k <= n; k++)
      for (int i = 1; i <= n; i++)
	for (int j = 1; j <= n; j++) {
	  dist[k][i][j] = -INF;
	  if (i == j)
	    dist[k][i][j] = 0;
	}
    while (m--) {
      scanf ("%d %d %d", &v, &u, &w);
      dist[0][v][u] = dist[0][u][v] = max (w, dist[0][v][u]);
    }
    // Floyd-Warshall
    for (int k = 1; k <= n; k++)
      for (int i = 1; i <= n; i++)
	for (int j = 1; j <= n; j++)
	  dist[k][i][j] = max (dist[k-1][i][j], max (dist[k-1][i][k], dist[k-1][k][j]));
    int q;
    scanf ("%d", &q);
    while (q--) {
      scanf ("%d %d", &v, &u);
      printf ("%d\n", dist[v][u]);
    }
  }
  return 0;
}
